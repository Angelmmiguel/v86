{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/browser/starter.js"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "build/**/*.d.ts"
  ]
} 